@model Splayce.JORF.Business.JORFText
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-ui-1.11.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap-tokenfield.min.js" type="text/javascript"></script>
<link href="~/Content/bootstrap-tokenfield.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/tokenfield-typeahead.min.css" rel="stylesheet" type="text/css" />

@Html.Partial("~/Views/Shared/_Header.cshtml")
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="text-center">
                        @Model.TitreFull

                    </h3>
                </div>
                <div class="panel-body">

                    <div style="text-align:center">
                        <a class="btn btn-default" href="@Model.UrlPdf" target="_blank">Fac-similé</a>
                        <a class="btn btn-default" href="@Model.UrlRTF" target="_blank">RTF</a>
                        <a class="btn btn-default" href="@Model.UrlFondsOfficiel" target="_blank">Légifrance</a>

                    </div>
                </div>
            </div>
        </div>


        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tags
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("AddTags", "Search", FormMethod.Post))
                    {

                        string tags = string.Join(",", Model.Tags.ToArray());
                        @Html.HiddenFor(model => model.IdText)



                        <div class="input-group" id="bloodhound">
                            <input type="text" class="form-control" id="tokenfield" value="@tags" name="tags" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-plus-circle"></i>
                                    <span class="hidden-xs">Ajouter le(s) tag(s)</span>
                                </button>
                            </span>
                        </div><!-- /input-group -->
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    @Html.Partial("~/Views/Shared/_DetailledResult.cshtml", Model)

                </div>

            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-xs-12">
        @Html.Partial("~/Views/Shared/_Footer.cshtml")
    </div>
</div>

<script type="text/javascript">

    $('#tokenfield').tokenfield()

</script>